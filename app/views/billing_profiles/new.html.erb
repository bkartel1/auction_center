<div class="text-center">
    <div class="row justify-content-center">
        <div class="col-12">
            <h1 class="mb-3 mt-4"><%= t('.title') %></h1>
            <% if @billing_profile.errors.any? %>
                <h3 id="error-explanation">
                    <%= pluralize(@billing_profile.errors.count, "error") %> prohibited this user from being saved:
                </h3>
                <ul id="errors">
                    <% @billing_profile.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
    </div>

    <%= form_with(model: @billing_profile, url: billing_profiles_path(@billing_profile), local: true, method: :post) do |f| %>
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="form-group">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, class: "form-control", value: @billing_profile.user.display_name %>
                </div>

                <div class="form-group">
                    <%= f.hidden_field :user_id, value: @billing_profile.user_id %>
                </div>

                <div class="form-group">
                    <%= f.label :vat_code %><br />
                    <%= f.text_field :vat_code, class: "form-control" %>
                </div>

                <div class="form-check text-left">
                    <%= f.check_box :legal_entity, { class: "form-check-input", default: false } %>
                    <%= f.label :legal_entity %><br />
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="form-group">
                    <%= f.label :street %><br />
                    <%= f.text_field :street, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :city %><br />
                    <%= f.text_field :city, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :postal_code %><br />
                    <%= f.text_field :postal_code, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :country %><br />
                    <%= f.text_field :country, class: "form-control" %>
                </div>
            </div>

            <div class="col-12">
                <%= f.submit t(:submit), class: "btn btn-primary form-control mb-2" %>
                <%= link_to t(:back), :back, class: "btn btn-secondary form-control" %>
            </div>
        </div>
    <% end %>
</div>
