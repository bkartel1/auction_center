<div class="text-center">
    <div class="row justify-content-center">
        <div class="col-12">
            <h1 class="mb-3 mt-4"><%= t('.title') %></h1>
            <% if @setting.errors.any? %>
                <h3 id="error-explanation">
                    <%= pluralize(@setting.errors.count, "error") %> <%= t('.errors') %>
                </h3>
                <ul id="errors">
                    <% @setting.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
    </div>

    <%= render 'form', setting: @setting, url: admin_setting_path(@setting) %>
</div>
